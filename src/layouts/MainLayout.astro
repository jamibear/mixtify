---
import Navbar from "../components/Navbar.tsx";
import Footer from "../components/Footer.tsx";

let userName = "";
let userImg = "";

if (Astro.cookies.has("mixtify_user_name")) {
  userName = Astro.cookies.get("mixtify_user_name").value;
}

if (Astro.cookies.has("mixtify_user_img")) {
  userImg = Astro.cookies.get("mixtify_user_img").value;
}
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Bagel+Fat+One&display=swap"
      rel="stylesheet"
    />
    <style is:global>
      * {
        box-sizing: border-box;
      }

      .main-wrapper {
        display: flex;
        flex-direction: column;
        gap: 3rem;
        max-width: 1000px;
      }

      .overlay {
        width: 100%;
        height: 30vh;
        background-image: linear-gradient(
          rgba(0, 0, 0, 0),
          rgba(0, 0, 0, 0.3),
          rgba(0, 0, 0, 1)
        );
        position: fixed;
        bottom: 0;
      }
    </style>
  </head>
  <body class="bg-[#030303] text-[#CDCED3] relative">
    <Navbar userName={userName} userImg={userImg} />
    <div class="main-wrapper mx-auto">
      <slot />
      <!-- your content is injected here -->
    </div>
    <div class="overlay"></div>
    <Footer />
  </body>
</html>
